---
// src/pages/login.astro (Using createEmailPasswordSession)
import Layout from '../layouts/Layout.astro';
---

<Layout title="Login">
    <div class="card">
        <h2>Login to Your Account</h2>
        <form id="login-form">
            <div>
                <label for="email">Email</label>
                <input type="email" id="email" name="email" placeholder="you@example.com" required />
            </div>
            <div>
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required />
            </div>
            <button type="submit" id="submit-button">Login</button>
        </form>
        <div id="message-area" class="message" style="display: none;"></div>
         <p class="text-center mt-4">Don't have an account? <a href="/signup">Sign up here</a>.</p>
    </div>

    <script>
        import { appwrite } from '../lib/appwrite';

        const form = document.getElementById('login-form') as HTMLFormElement | null;
        const emailInput = document.getElementById('email') as HTMLInputElement | null;
        const passwordInput = document.getElementById('password') as HTMLInputElement | null;
        const submitButton = document.getElementById('submit-button') as HTMLButtonElement | null;
        const messageArea = document.getElementById('message-area') as HTMLDivElement | null;

        function showMessage(text: string, type: 'error' | 'success' = 'error') {
            if (messageArea) {
                messageArea.textContent = text;
                messageArea.className = `message ${type}`;
                messageArea.style.display = 'block';
            }
        }

        if (form && emailInput && passwordInput && submitButton && messageArea) {
            form.addEventListener('submit', async (e) => {
                e.preventDefault();

                submitButton.disabled = true;
                submitButton.textContent = 'Logging in...';
                showMessage('', 'error');

                const email = emailInput.value.trim();
                const password = passwordInput.value;

                try {
                    // --- USING createEmailPasswordSession ---
                    console.log(`Attempting login for ${email} using createEmailPasswordSession...`);
                    await appwrite.account.createEmailPasswordSession(email, password); // <-- THE CORRECT METHOD FOR v18+
                    console.log("Login successful! Redirecting...");
                    window.location.href = '/dashboard';

                } catch (error: any) {
                    console.error("Login failed:", error);
                    let msg = "Login failed. Please check your credentials.";
                    if (error.message && error.message.toLowerCase().includes('verified')) {
                        msg = "Login failed. Please ensure your email is verified.";
                    } else if (error.message && error.message.toLowerCase().includes('invalid credentials')) {
                        msg = "Login failed. Incorrect email or password.";
                    } else {
                        msg = `Login failed: ${error.message}`;
                    }
                    showMessage(msg);
                    submitButton.disabled = false;
                    submitButton.textContent = 'Login';
                }
            });
        } else {
             console.error("One or more login form elements were not found!");
             if (messageArea) showMessage("Page Error: Could not find form elements.");
        }
    </script>
</Layout>